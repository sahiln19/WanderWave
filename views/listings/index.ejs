<% layout("/layouts/boilerplate") %>
<body>
    <h1>All Listings</h1>
    <!-- <form method="GET" action="/listings/new">
        <button> Create New List </button>
    </form> -->
    <div class="row row-cols-col-lg-3 row-cols-md-3 row-cols-sm-1">
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <% for (let listing of allListings) { %>
                <div class="card" style="width: 20rem;">
                    <img src="<%= listing.image %>" alt="lsiting_image/" class="card-img-top " style ="height: 20rem;" >
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br>
                        &#8377; <%= listing.price.toLocalString("en-IN") %>
                        </p>
                    </div>
                </div>
            <% } %>
        </a>
    </div>
</body>
